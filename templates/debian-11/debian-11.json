{
  "variables": {
    "mirror": "http://cdimage.debian.org/cdimage/release",
    "mirror_directory": "11.5.0/amd64/iso-cd",
    "iso_name": "debian-11.5.0-amd64-netinst.iso",
    "iso_checksum": "file:https://cdimage.debian.org/debian-cd/current/amd64/iso-cd/SHA512SUMS",
    "vm_name": "Debian-11",
    "cpus": "1",
    "memory": "2048",
    "disk_size": "20480",
    "disk_type_id": "0",
    "network": "nat",
    "network_adapter_type": "e1000",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant"
  },
  "builders": [
      {
        "type": "vmware-iso",
        "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",
        "iso_checksum": "{{user `iso_checksum`}}",
        "http_directory": "./setup",
        "boot_wait": "2s",
        "boot_command": [
          "<esc>auto preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<enter>"
        ],
        "headless": false,
        "version": 19,
        "vm_name": "{{user `vm_name`}}",
        "vmx_data": {
          "cpuid.coresPerSocket": "1"
        },
        "communicator": "ssh",
        "ssh_timeout": "60m",
        "ssh_username": "{{user `ssh_username`}}",
        "ssh_password": "{{user `ssh_password`}}",
        "ssh_port": 22,
        "guest_os_type": "debian11-64",
        "cpus": "{{user `cpus`}}",
        "memory": "{{user `memory`}}",
        "disk_adapter_type": "nvme",
        "disk_size": "{{user `disk_size`}}",
        "disk_type_id": "{{user `disk_type_id`}}",
        "network": "{{user `network`}}",
        "network_adapter_type": "{{user `network_adapter_type`}}",
        "vmx_remove_ethernet_interfaces": true,
        "output_directory": "../../output/Debian_11_vmware",
        "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p"
      }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "../../boxes/Debian_11_{{.Provider}}.box"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "HOME_DIR=/home/vagrant"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "expect_disconnect": true,
      "scripts": [
        "../scripts/sshd.sh",
        "../scripts/vagrant.sh"
      ],
      "type": "shell"
    }
  ]
}