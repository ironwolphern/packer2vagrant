#!/bin/sh -eux

if [ "${1}" = "centos" ]; then
    cd templates/centos-8
    packer build -force -color=false -timestamp-ui centos-stream-8.json
elif [ "${1}" = "debian" ]; then
    cd templates/debian-11
    packer build -force -color=false -timestamp-ui debian-11.json
else
    echo "Unknown OS: ${1}"
    exit 1
fi